event


    new ev_str_switch
        push hidereveal ground2 5
        condition 4 switch1 1

    new ev_str_switch2
        push activateswitch switch1 toggle



    new ev_str_scarecrow
        push setstatic object_block 0

    new ev_rock
        push hidereveal object_rock 4
        condition 3 block_z 65

    new ev_object
        push listenposition object_block block_x block_y block_z
end

objectentity

    new object_block
        texture tex_block
        mesh mesh_block
        passive ev_object

    new object_switch
        texture tex_switch
        mesh mesh_switch
        passive ev_str_switch
        active ev_str_switch2


    new object_scarecrow
        texture tex_scarecrow
        mesh mesh_scarecrow
        active ev_str_scarecrow

    new object_rock
        mesh mesh_rock
        texture tex_rock
        passive ev_rock

end

actorentity

    new ginka
        texture tex_ginka
        mesh mesh_ginka

end

end
