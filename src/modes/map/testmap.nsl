        texture tex_crate
        mesh mesh_crate_n1

    new walln2
        texture tex_crate
        mesh mesh_crate_n2

    new walln3
        texture tex_crate
        mesh mesh_crate_n3

    new walln3
        texture tex_crate
        mesh mesh_crate_n3

    new walls1
        texture tex_crate
        mesh mesh_crate_s1

    new walls2
        texture tex_crate
        mesh mesh_crate_s2

    new walls3
        texture tex_crate
        mesh mesh_crate_s3

